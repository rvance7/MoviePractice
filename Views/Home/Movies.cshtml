@{
    ViewBag.Title = "Movies";
}

@model Assignment3.Models.MoviesResponse

<!--Form for users to enter movies-->
<body>
    <form asp-action="Movies" method="post">
        <div>
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" />
        </div>

        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" />
        </div>

        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" />
        </div>

        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>

        <div>
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>

        <div>
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />
        </div>

        <button type="submit">Submit Movie</button>

        <div asp-validation-summary="All"></div>
    </form>
</body>